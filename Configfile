TESTSRC     += syntax-dumpvars.bash
TESTSRC     += syntax-one_bit.bash
TESTSRC     += syntax-multi_map.bash

TESTSRC     += multisig.bash

# Lists the signals present in a VCD file
BINARIES    += vcdsigs
SOURCES     += vcdsigs.c++
